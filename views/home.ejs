            border-radius: 6px;
            outline: 0;
            padding: 0 15px;
            font-size: 17px;
            font-family: Poppins, sans-serif;
            transition: .3s
        }

        .contact .right form .field input:focus,
        .contact .right form .textarea textarea:focus {
            border-color: #b3b3b3
        }

        .contact .right form .textarea textarea {
            padding-top: 10px;
            resize: none
        }

        .contact .right form .button-area {
            display: flex;
            align-items: center
        }

        footer {
            background: #111;
            padding: 15px 23px;
            color: #fff;
            text-align: center
        }

        footer span a {
            color: #dc143c
        }

        footer span a:hover {
            text-decoration: underline
        }

