            }

            .contact .right form .fields {
                flex-direction: column
            }

            .contact .right form .email,
            .contact .right form .name {
                margin: 0
            }

            .right form .error-box {
                width: 150px
            }

            .scroll-up-btn {
                right: 15px;
                bottom: 15px;
                height: 38px;
                width: 35px;
                font-size: 23px;
                line-height: 38px
            }
        }
    </style>
